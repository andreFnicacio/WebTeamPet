<!-- 'bootstrap / Toggle Switch $FIELD_NAME_TITLE$ Field' -->
<div class="form-group">
    <label class="control-label col-md-3">$FIELD_NAME_TITLE$
        <span class="required"> * </span>
    </label>
    <div class="col-md-4">
        <input type="checkbox" name='$FIELD_NAME$' class="make-switch" data-on-color="success" data-off-color="danger" data-on-text="On" data-off-text="Off">
    </div>
</div>